<div class="container m-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4 border p-4">

      <h2 class="text-center">Add Item to inventory</h2>
      <%= simple_form_for @item do |f| %>
        <%= f.input :product, label: "Product"  %>
        <%= f.input :bestByDate, label: "Best by date" %>
        <%= f.input :stock, label: "Stock"  %>
        <%= f.submit(class: "btn-call")%>
      <% end %>

    </div>
</div>
</div>
