<div class="container">
  <h1>Inventory</h1>
  <p>You still have the following products in your inventory</p>
  <BR><BR>

  <% @items.each do |item| %>
    <h2><%= item.product %></h2>
    <p><strong>Stock:</strong> <%= item.stock %><BR>
    <strong>Best by date:</strong> <%= item.bestByDate.strftime("%d/%m/%Y")%> <BR></p>
    <%= link_to "Edit item", edit_item_path(item), class:"btn btn-dark" %>
    <%= link_to 'Delete', item_path(item), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?"}, class:"btn btn-dark" %>
    <HR>
  <% end %>

  <BR><BR>
  <%= link_to "Add new item", new_item_path, class:"btn btn-dark" %>
  <%= link_to "Go to my Recipes", my_recipes_path, class:"btn btn-dark" %>
  <%= link_to "Back to homepage", root_path, class:"btn btn-dark" %>

</div>
