<div class="container">
  <h1>My Recipes</h1>
  <BR><BR>

  <% @my_recipes.each do |recipe| %>
    <%= cl_image_tag(recipe.photo.key,
      width: 300, height: 200, crop: :fill) %>
    <h2><%= link_to recipe.title, my_recipe_path(recipe) %></h2>
    <p><strong>Ingredients:</strong> <%= recipe.ingredients %><BR>
    <strong>Cooking Time:</strong> <%= recipe.cookingTime %> minutes<BR></p>
    <p><strong>Description:</strong><BR>
    <%= recipe.description %><BR></p>
  <% end %>

<%= link_to "Add new recipe", new_my_recipe_path, class:"btn btn-dark" %>
<%= link_to "Back to homepage", root_path, class:"btn btn-dark" %>

</div>
